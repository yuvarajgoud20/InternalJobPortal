@model InternalJobPortalMVC.Models.EmployeeSkill

@{
    ViewData["Title"] = "Delete Employee Skill";
}

<style>
    .delete-card {
        max-width: 500px;
        margin: 40px auto;
        padding: 20px;
        border-radius: 15px;
        background: #f0f0f0;
        box-shadow: 8px 8px 16px #b8babc, -8px -8px 16px #ffffff;
    }

    .header {
        background-color: #000; /* Black */
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        margin-bottom: 20px;
    }

    .info {
        font-size: 1.1rem;
        margin-bottom: 10px;
        padding: 10px;
        border-radius: 8px;
        box-shadow: inset 4px 4px 8px #b8babc, inset -4px -4px 8px #ffffff;
        background: #f0f0f0;
    }

    .delete-btn {
        display: block;
        text-align: center;
        background-color: #dc3545;
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
        border: none;
        width: 100%;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }

    .back-btn {
        display: block;
        text-align: center;
        background-color: #6c757d;
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
    }

        .back-btn:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-card">
    <div class="header">Delete Employee Skill</div>

    <h5 class="text-center text-danger">Are you sure you want to delete this?</h5>

    <div class="info"><strong>Employee ID:</strong> @Html.DisplayFor(model => model.EmployeeID)</div>
    <div class="info"><strong>Skill ID:</strong> @Html.DisplayFor(model => model.SkillID)</div>
    <div class="info"><strong>Experience:</strong> @Html.DisplayFor(model => model.SkillExperience) years</div>

    <form asp-action="EmployeeSkillDelete">
        <input type="submit" value="Delete" class="delete-btn" />
    </form>

    <a asp-action="EmployeeSkillIndex" asp-route-id="@Model.EmployeeID" class="back-btn">Back to Employee Skills</a>
</div>
