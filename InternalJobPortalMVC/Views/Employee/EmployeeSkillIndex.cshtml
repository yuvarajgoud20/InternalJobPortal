@model IEnumerable<InternalJobPortalMVC.Models.EmployeeSkill>
@using System.Security.Claims

@{
    ViewData["Title"] = "Employee Skill Index";
    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
}

<h1 class="mb-4 text-center">Employee Skills</h1>

@if (role == "Manager")
{
    <div class="text-end mb-3">
        <a asp-action="EmployeeSkillCreate" asp-route-id="@ViewData["id"]" class="btn btn-primary">
            Create New
        </a>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h5 class="card-title">Employee ID: @item.EmployeeID</h5>
                    <p class="card-text">
                        <strong>Skill ID:</strong> @item.SkillID <br>
                        <strong>Experience:</strong> @item.SkillExperience years
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="EmployeeSkillDetails" asp-route-empId="@item.EmployeeID" asp-route-skillId="@item.SkillID"
                           class="btn btn-info btn-sm">Details</a>

                        
                            <a asp-action="EmployeeSkillEdit" asp-route-empId="@item.EmployeeID" asp-route-skillId="@item.SkillID"
                               class="btn btn-warning btn-sm">Edit</a>

                            <a asp-action="EmployeeSkillDelete" asp-route-empId="@item.EmployeeID" asp-route-skillId="@item.SkillID"
                               class="btn btn-danger btn-sm">Delete</a>
                        
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
