@using System.Security.Claims
@{
    var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value;
}
<partial name="_Notification" />

<style>
    /* Center Heading and Button */
    .heading-container {
        text-align: center;
        margin-bottom: 20px;
    }

    /* Employee Cards */
    .card {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 8px 8px 16px #b8babc, -8px -8px 16px #ffffff;
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out, background 0.5s ease-in-out;
        background: #ffffff;
        min-height: 280px; /* Adjusted for EmpID */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        /* Blurred Background Image */
        .card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            filter: blur(2px);
            transition: opacity 0.5s ease-in-out, filter 0.5s ease-in-out;
            opacity: 1;
        }

        /* White Background on Hover */
        .card:hover::before {
            opacity: 0;
            filter: blur(0px);
        }

    /* Ensure Text and Content Stay Clear */
    .card-body {
        position: relative;
        z-index: 1;
        background: transparent;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .col-md-4 {
        display: flex;
        align-items: stretch;
    }

    /* Button Styling */
    .btn {
        padding: 10px 16px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
        min-width: 100px;
        text-align: center;
    }

    /* Unique Button Colors */
    .btn-warning {
        background-color: #f39c12;
        border-color: #e67e22;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e67e22;
            border-color: #d35400;
        }

    .btn-info {
        background-color: #3498db;
        border-color: #2980b9;
        color: white;
    }

        .btn-info:hover {
            background-color: #2980b9;
            border-color: #1f618d;
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #c0392b;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c0392b;
            border-color: #a93226;
        }

    .btn-success {
        background-color: #2ecc71;
        border-color: #27ae60;
        color: white;
    }

        .btn-success:hover {
            background-color: #27ae60;
            border-color: #229954;
        }

    .btn-primary {
        background-color: #9b59b6;
        border-color: #8e44ad;
        color: white;
    }

        .btn-primary:hover {
            background-color: #8e44ad;
            border-color: #6c3483;
        }

    .btn-group {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-top: 10px;
    }
</style>

<div class="heading-container">
    <h1>Employees</h1>
    @if (role == "Admin")
    {
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    }
</div>



<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 d-flex">
            <div class="card w-100">
                <div class="card-body">
                    <h5 class="card-title">@item.EmployeeName</h5>
                    <p class="card-text">
                        <strong>Emp ID:</strong> @item.EmployeeID <br>
                        <strong>Email:</strong> @item.EmailID <br>
                        <strong>Phone:</strong> @item.PhoneNo <br>
                        <strong>Experience:</strong> @item.TotalExperience years <br>
                        <strong>Job ID:</strong> @item.JobID
                    </p>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.EmployeeID" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.EmployeeID" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeID" class="btn btn-danger">Delete</a>
                        <a asp-action="EmployeeSkillIndex" asp-route-id="@item.EmployeeID" class="btn btn-success">Skills</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
