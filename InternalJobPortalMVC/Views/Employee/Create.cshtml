@using InternalJobPortalMvc.Models
@model InternalJobPortalMVC.Models.Employee

@{
    ViewData["Title"] = "Create";
}

<style>
    .create-card {
        max-width: 500px;
        margin: 40px auto;
        padding: 20px;
        border-radius: 15px;
        background: #fff;
        box-shadow: 8px 8px 16px #b8babc, -8px -8px 16px #ffffff;
    }

    .header {
        background-color: #000; /* Black Background */
        color: white; /* White Text */
        font-size: 1.8rem;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 5px;
        box-shadow: inset 2px 2px 5px #b8babc, inset -2px -2px 5px #ffffff;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .back-btn {
        display: block;
        width: 100%;
        text-align: center;
        background-color: #6c757d; /* Grey */
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
    }

        .back-btn:hover {
            background-color: #5a6268;
        }
</style>

<div class="create-card">
    <div class="header">Create Employee</div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="EmployeeID" class="control-label"></label>
            <input asp-for="EmployeeID" class="form-control" />
            <span asp-validation-for="EmployeeID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmployeeName" class="control-label"></label>
            <input asp-for="EmployeeName" class="form-control" />
            <span asp-validation-for="EmployeeName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EmailID" class="control-label"></label>
            <input asp-for="EmailID" class="form-control" />
            <span asp-validation-for="EmailID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNo" class="control-label"></label>
            <input asp-for="PhoneNo" class="form-control" />
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TotalExperience" class="control-label"></label>
            <input asp-for="TotalExperience" class="form-control" />
            <span asp-validation-for="TotalExperience" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="JobID" class="control-label"></label>
            @Html.DropDownListFor(Model => Model.JobID, await ForeignKeyHelper.GetJobIds(), new { @class = "form-control" })
            <span asp-validation-for="JobID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index" class="back-btn">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
