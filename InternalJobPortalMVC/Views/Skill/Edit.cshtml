@model InternalJobPortalMVC.Models.Skill

@{
    ViewData["Title"] = "Edit";
}

<style>
    .form-card {
        max-width: 500px;
        margin: 40px auto;
        padding: 20px;
        border-radius: 15px;
        background: #fff;
        box-shadow: 8px 8px 16px #b8babc, -8px -8px 16px #ffffff;
        text-align: center;
    }

    .header {
        background-color: #000; /* Black Background */
        color: white; /* White Text */
        font-size: 1.8rem;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
    }

    .back-btn {
        display: block;
        width: 100%;
        text-align: center;
        background-color: #6c757d; /* Grey */
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
    }

        .back-btn:hover {
            background-color: #5a6268;
        }
</style>

<div class="form-card">
    <div class="header">Edit Skill</div>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="SkillID" class="control-label"></label>
            <input asp-for="SkillID" class="form-control" readonly />
            <span asp-validation-for="SkillID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SkillName" class="control-label"></label>
            <input asp-for="SkillName" class="form-control" />
            <span asp-validation-for="SkillName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SkillLevel" class="control-label"></label>
            <select asp-for="SkillLevel" class="form-control">
                <option value="B">Basic</option>
                <option value="I">Intermediate</option>
                <option value="A">Advanced</option>
            </select>
            <span asp-validation-for="SkillLevel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index" class="back-btn">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
