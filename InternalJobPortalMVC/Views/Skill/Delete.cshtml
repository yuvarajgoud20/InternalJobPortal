@model InternalJobPortalMVC.Models.Skill

@{
    ViewData["Title"] = "Delete";
}

<style>
    .delete-card {
        max-width: 500px;
        margin: 40px auto;
        padding: 20px;
        border-radius: 15px;
        background: #fff;
        box-shadow: 8px 8px 16px #b8babc, -8px -8px 16px #ffffff;
        text-align: center;
    }

    .header {
        background-color: #000; /* Black Background */
        color: white; /* White Text */
        font-size: 1.8rem;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .details-list {
        text-align: left;
    }

    .dt-label {
        font-weight: bold;
        color: #333;
    }

    .btn-danger {
        width: 100%;
        padding: 10px;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .back-btn {
        display: block;
        width: 100%;
        text-align: center;
        background-color: #6c757d; /* Grey */
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
    }

        .back-btn:hover {
            background-color: #5a6268;
        }
</style>

<div class="delete-card">
    <div class="header">Delete Skill</div>

    <h3>Are you sure you want to delete this?</h3>

    <dl class="row details-list">
        <dt class="col-sm-4 dt-label">@Html.DisplayNameFor(model => model.SkillID)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SkillID)</dd>

        <dt class="col-sm-4 dt-label">@Html.DisplayNameFor(model => model.SkillName)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SkillName)</dd>

        <dt class="col-sm-4 dt-label">@Html.DisplayNameFor(model => model.SkillLevel)</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.SkillLevel)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>

    <a asp-action="Index" class="back-btn">Back to List</a>
</div>
