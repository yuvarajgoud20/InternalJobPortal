@model InternalJobPortalMVC.Models.Skill

@{
    ViewData["Title"] = "Create";
}

<style>
    .form-card {
        max-width: 500px;
        margin: 40px auto;
        padding: 20px;
        border-radius: 15px;
        background: #fff;
        box-shadow: 8px 8px 16px #b8babc, -8px -8px 16px #ffffff;
        text-align: center;
    }

    .header {
        background-color: #000; /* Black Background */
        color: white; /* White Text */
        font-size: 1.8rem;
        font-weight: bold;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .form-group {
        text-align: left;
        margin-bottom: 15px;
    }

    .btn-primary {
        width: 100%;
        padding: 10px;
    }

    .radio-group {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
    }

        .radio-group label {
            margin-left: 5px;
            font-weight: bold;
        }

    .back-btn {
        display: block;
        width: 100%;
        text-align: center;
        background-color: #6c757d; /* Grey */
        color: white;
        padding: 10px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-top: 10px;
    }

        .back-btn:hover {
            background-color: #5a6268;
        }
</style>

<div class="form-card">
    <div class="header">Create Skill</div>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="SkillID" class="control-label"></label>
            <input asp-for="SkillID" class="form-control" />
            <span asp-validation-for="SkillID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SkillName" class="control-label"></label>
            <input asp-for="SkillName" class="form-control" />
            <span asp-validation-for="SkillName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SkillLevel" class="control-label"></label>
            <div class="radio-group">
                <input type="radio" id="basic" name="SkillLevel" value="B">
                <label for="basic">Basic</label>

                <input type="radio" id="intermediate" name="SkillLevel" value="I">
                <label for="intermediate">Intermediate</label>

                <input type="radio" id="advanced" name="SkillLevel" value="A">
                <label for="advanced">Advanced</label>
            </div>
            <span asp-validation-for="SkillLevel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>

    <a asp-action="Index" class="back-btn">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
