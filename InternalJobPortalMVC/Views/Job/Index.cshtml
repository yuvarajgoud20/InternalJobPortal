@model IEnumerable<InternalJobPortalMVC.Models.Job>

@{
    ViewData["Title"] = "Jobs";
    var userRole = User.IsInRole("Manager") ? "Manager" : "Employee"; // Checking the role
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    /* Header */
    .page-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Job Cards */
    .job-card {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 5px 5px 10px #d1d1d1, -5px -5px 10px #ffffff;
        transition: 0.3s;
        color: #000; /* Ensure text remains readable */
    }

        .job-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            filter: blur(2px) brightness(0.8); /* Blurred and slightly darkened */
            opacity: 0.6; /* Reduce opacity */
            z-index: -1;
        }



        .job-card:hover {
            box-shadow: inset 5px 5px 10px #d1d1d1, inset -5px -5px 10px #ffffff;
        }

    /* Job Actions */
    .job-actions a {
        margin-right: 10px;
        text-decoration: none;
        font-weight: bold;
        padding: 8px 12px;
        border-radius: 5px;
        transition: 0.3s;
    }

    .edit-btn {
        background-color: #ffc107;
        color: white;
    }

    .delete-btn {
        background-color: #dc3545;
        color: white;
    }

    .details-btn {
        background-color: #007bff;
        color: white;
    }

    .apply-btn {
        background-color: #28a745;
        color: white;
    }

    .skills-btn {
        background-color: #17a2b8;
        color: white;
    }

    .job-actions a:hover {
        opacity: 0.8;
    }
</style>

<h1 class="page-title">Available Jobs</h1>

<!-- Manager Only: Create New Job -->
@if (userRole == "Manager")
{
    <p class="text-center">
        <a asp-action="Create" class="btn btn-primary">Create New Job</a>
    </p>
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="job-card">
                    <h4>@item.JobTitle</h4>
                    <p><strong>Job ID:</strong> @item.JobID</p>
                    <p><strong>Description:</strong> @item.JobDescription</p>
                    <p><strong>Salary:</strong> ₹@item.Salary</p>

                    <div class="job-actions">
                         <a asp-action="Edit" asp-route-jid="@item.JobID" class="edit-btn">Edit</a>
                            <a asp-action="Delete" asp-route-jid="@item.JobID" class="delete-btn">Delete</a>
                            <a asp-action="JobSkillByJobID" asp-route-jobID="@item.JobID" class="skills-btn">Job Skills</a>
                   

                        @* <a asp-action="Details" asp-route-jid="@item.JobID" class="details-btn">Details</a> *@
 
                    </div>
                </div>
            </div>
        }
    </div>
</div>
