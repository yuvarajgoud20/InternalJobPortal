@model IEnumerable<InternalJobPortalMVC.Models.JobSkill>

@{
    ViewData["Title"] = "Job Skills by Job ID";
}
<partial name="_Notification" />

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded">
        <div class="card-header bg-black text-white text-center">
            <h4>Job Skills by Job ID</h4>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end mb-3">
                @Html.ActionLink("+ Add New Skill", "CreateJobSkill", new { jobID = ViewData["jobID"] }, new { @class = "btn btn-success" })
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.JobID)</th>
                            <th>@Html.DisplayNameFor(model => model.SkillID)</th>
                            <th>@Html.DisplayNameFor(model => model.Experience)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.JobID)</td>
                                <td>@Html.DisplayFor(modelItem => item.SkillID)</td>
                                <td>@Html.DisplayFor(modelItem => item.Experience)</td>
                                <td>
                                    @Html.ActionLink("Edit", "EditJobSkill", new { jobID = item.JobID, skillID = item.SkillID }, new { @class = "btn btn-warning btn-sm" })
                                    @Html.ActionLink("Details", "JobSkillDetails", new { jobID = item.JobID, skillID = item.SkillID }, new { @class = "btn btn-info btn-sm" })
                                    @Html.ActionLink("Delete", "DeleteJobSkill", new { jobID = item.JobID, skillID = item.SkillID }, new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
