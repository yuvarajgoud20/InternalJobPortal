@model InternalJobPortalMVC.Models.Job

@{
    ViewData["Title"] = "Create Job";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-black text-white text-center">
                    <h4>Create Job</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="JobID" class="form-label fw-semibold"></label>
                            <input asp-for="JobID" class="form-control" />
                            <span asp-validation-for="JobID" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JobTitle" class="form-label fw-semibold"></label>
                            <input asp-for="JobTitle" class="form-control" />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JobDescription" class="form-label fw-semibold"></label>
                            <textarea asp-for="JobDescription" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="JobDescription" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Salary" class="form-label fw-semibold"></label>
                            <input asp-for="Salary" class="form-control" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create Job</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
