@model InternalJobPortalMVC.Models.ApplyJob

@{
    ViewData["Title"] = "Application Edit";
}

<div class="container d-flex justify-content-center mt-4">
    <div class="card shadow-lg p-4" style="width: 50%;">
        <!-- Heading with Black Background -->
        <div class="card-header text-center text-white" style="background-color: black;">
            <h2 class="mb-0">Edit Application</h2>
        </div>

        <div class="card-body">
            <form asp-action="ApplicationEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PostID" class="control-label font-weight-bold"></label>
                    <input asp-for="PostID" class="form-control" readonly />
                    <span asp-validation-for="PostID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EmployeeID" class="control-label font-weight-bold"></label>
                    <input asp-for="EmployeeID" class="form-control" readonly />
                    <span asp-validation-for="EmployeeID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AppliedDate" class="control-label font-weight-bold"></label>
                    <input asp-for="AppliedDate" class="form-control" readonly />
                    <span asp-validation-for="AppliedDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ApplicationStatus" class="control-label font-weight-bold"></label>
                    <select asp-for="ApplicationStatus" class="form-control">
                        <option value="P">Pending</option>
                        <option value="A">Accepted</option>
                        <option value="R">Rejected</option>
                    </select>
                    <span asp-validation-for="ApplicationStatus" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success w-100">Save Changes</button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center">
            <a asp-action="ApplicationIndex" asp-route-postID="@Model.PostID" class="btn btn-secondary w-100">
                Back to Applications
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
