@model InternalJobPortalMVC.Models.JobPost

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    /* Heading */
    .page-title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        color: white;
        background-color: black;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    /* Delete Confirmation Card */
    .delete-card {
        max-width: 600px;
        margin: 0 auto;
        background: #ffffff;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 5px 5px 10px #d1d1d1, -5px -5px 10px #ffffff;
        transition: 0.3s;
    }

        .delete-card:hover {
            box-shadow: inset 5px 5px 10px #d1d1d1, inset -5px -5px 10px #ffffff;
        }

    /* Job Details */
    .job-details dt {
        font-weight: bold;
        color: #333;
    }

    /* Buttons */
    .btn-delete {
        background-color: #dc3545;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        transition: 0.3s;
        width: 100%;
        text-align: center;
    }

        .btn-delete:hover {
            opacity: 0.8;
        }

    .btn-back {
        display: block;
        text-align: center;
        text-decoration: none;
        font-weight: bold;
        color: white;
        background: linear-gradient(145deg, #007bff, #0056b3);
        padding: 10px;
        border-radius: 5px;
        transition: 0.3s;
        margin-top: 10px;
    }

        .btn-back:hover {
            opacity: 0.9;
        }

</style>

<h1 class="page-title">Delete Job Post</h1>

<div class="delete-card">
    <h3 class="text-danger text-center">Are you sure you want to delete this job post?</h3>
    <hr />
    <dl class="row job-details">
        <dt class="col-sm-4">Post ID:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.PostID)</dd>

        <dt class="col-sm-4">Job ID:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.JobID)</dd>

        <dt class="col-sm-4">Date of Posting:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfPosting)</dd>

        <dt class="col-sm-4">Last Date to Apply:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.LastDateToApply)</dd>

        <dt class="col-sm-4">No. of Vacancies:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.NoOfVacancies)</dd>
    </dl>

    <form asp-action="Delete">
        <button type="submit" class="btn-delete">Delete</button>
        <a asp-action="Index" class="btn-back">Back to List</a>
    </form>
</div>
