@model InternalJobPortalMVC.Models.JobPost

@{
    ViewData["Title"] = "Details";
}

<div class="container d-flex justify-content-center mt-4">
    <div class="card shadow-lg p-4" style="width: 50%;">
        <!-- Heading with Black Background -->
        <div class="card-header text-center text-white" style="background-color: black;">
            <h2 class="mb-0">Job Post Details</h2>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">Post ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PostID)</dd>

                <dt class="col-sm-4 font-weight-bold">Job ID:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.JobID)</dd>

                <dt class="col-sm-4 font-weight-bold">Date of Posting:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DateOfPosting)</dd>

                <dt class="col-sm-4 font-weight-bold">Last Date to Apply:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.LastDateToApply)</dd>

                <dt class="col-sm-4 font-weight-bold">No of Vacancies:</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NoOfVacancies)</dd>
            </dl>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@* Custom CSS for Styling *@
<style>
    .card {
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
</style>
