@using InternalJobPortalMvc.Models
@model InternalJobPortalMVC.Models.JobPost

@{
    ViewData["Title"] = "Create";
}

<div class="container d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="width: 50%;">
        <!-- Heading with Black Background -->
        <div class="card-header text-center text-white" style="background-color: black;">
            <h2 class="mb-0">Create Job Post</h2>
        </div>

        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="JobID" class="control-label"></label>
                    @Html.DropDownListFor(Model => Model.JobID, await ForeignKeyHelper.GetJobIds(), new { @class = "form-control" })
                    <span asp-validation-for="JobID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateOfPosting" class="control-label"></label>
                    <input asp-for="DateOfPosting" class="form-control" />
                    <span asp-validation-for="DateOfPosting" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastDateToApply" class="control-label"></label>
                    <input asp-for="LastDateToApply" class="form-control" />
                    <span asp-validation-for="LastDateToApply" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NoOfVacancies" class="control-label"></label>
                    <input asp-for="NoOfVacancies" class="form-control" />
                    <span asp-validation-for="NoOfVacancies" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@* Custom CSS for Styling *@
<style>
    .card {
        border-radius: 12px;
        transition: all 0.3s ease-in-out;
    }

        .card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }
</style>
