@model InternalJobPortalMVC.Models.ApplyJob

@{
    ViewData["Title"] = "Apply for Job";
}

<h2 class="text-center mb-4">Apply for Job</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <form asp-action="ApplicationCreate" method="post">
                    <div class="mb-3">
                        <label asp-for="PostID" class="form-label">Post ID</label>
                        <input asp-for="PostID" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="EmployeeID" class="form-label">Employee ID</label>
                        <input asp-for="EmployeeID" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="AppliedDate" class="form-label">Applied Date</label>
                        <input asp-for="AppliedDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ApplicationStatus" class="form-label">Application Status</label>
                        <input hidden asp-for="ApplicationStatus" class="form-control" value="P" readonly />
                        <input class="form-control" value="Reviewing" readonly />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit Application</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
